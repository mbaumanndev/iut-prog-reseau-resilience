@model WeatherForecastViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.HasError)
{
    <div class="alert alert-danger">
        Une erreur est survenue pendant la récupération des prévisions météo.
    </div>
}
@if (Model.Forecast != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temperature (°C)</th>
                <th>Temperature (°F)</th>
                <th>Résumé</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v_Item in Model.Forecast)
            {
                <tr>
                    <td>@v_Item.Date.ToLongDateString()</td>
                    <td>@v_Item.TemperatureC</td>
                    <td>@v_Item.TemperatureF</td>
                    <td>@v_Item.Summary</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Date</th>
                <th>Temperature (°C)</th>
                <th>Temperature (°F)</th>
                <th>Résumé</th>
            </tr>
        </tfoot>
    </table>

}
